/* pages/video/video.wxss */
.videoContainer .header{
    padding: 10rpx;
    display: flex;
}

.videoContainer .header image{
    width: 60rpx;
    height: 60rpx;
}

.videoContainer .header .search{
    border:1rpx solid #eee;
    /* flex-grow 可拉伸 flex-shrink 可压缩 flex:basis 当前元素宽度 */
    /* flex默认值 flex-grow:0,flex-shrink:1,flex-basis:auto */
    /* flex:1 flex-grow:1,flex-shrink:1,flex-basis:0% */
    /* flex:auto flex-grow:1,flex-shrink:1,flex-basis:auto */
    /* flex:1 会导致父元素宽度自动为100% */
    flex: 1;
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
}

/* 导航区域 */
.navScroll{
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}

.navScroll .navContent {
    height: 60rpx;
    box-sizing: border-box;
}

.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.navScroll .navItem .active{
    border-bottom: 1rpx solid #d43c33;
}


/* 视频列表 */
.videoList{
    background: #eee;
    height: calc(100vh - 148rpx);
  }
  
  .videoList .videoItem {
    background: #fff;
    margin-bottom: 20rpx;
    padding: 0 3%;
  }
  
  .videoList video {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
  }
  
  .videoList .content {
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
  }
  
  .videoList .footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
  }
  
  .videoList .footer .avatarUrl {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
  }
  .videoList .footer .nickName {
    vertical-align: middle;
    font-size: 22rpx;
    margin-left: 10rpx;
  }
  
  
  .videoList .comments_praised {
    float: right;
  }
  
  .videoList .comments_praised .item {
    line-height: 60rpx;
    height: 60rpx;
    margin-left: 60rpx;
    font-size: 26rpx;
    position: relative;
  }
  
  /* 修改button 默认样式 开始*/
  .videoList .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
  }
  
  .videoList .comments_praised .btn:after {
    border-color: #fff;
  }
  /* 修改button 默认样式 结束*/
  
  
  .videoList .comments_praised .item .iconfont {
    margin-left: 10rpx;
  }
  
  
  .videoList .comments_praised .item .showCount {
    position: absolute;
    top: -40rpx;
    font-size: 18rpx;
  }
  
  
  .videoList .comments_praised .item .iconfont.active {
    color: #d43c33;
  }
  
  
  